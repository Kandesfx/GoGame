# GoGame Backend Configuration
# Copy file này thành .env và chỉnh sửa các giá trị

# Application
APP_NAME=GoGame Backend
DEBUG=true

# Database - PostgreSQL
POSTGRES_DSN=postgresql+psycopg://postgres:postgres@localhost:5432/gogame

# Database - MongoDB
MONGO_DSN=mongodb://localhost:27017
MONGO_DATABASE=gogame

# JWT Authentication
JWT_SECRET_KEY=change-me-to-a-random-secret-key-min-32-chars
JWT_REFRESH_SECRET_KEY=change-me-to-a-random-refresh-secret-key-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXP_MINUTES=15
REFRESH_TOKEN_EXP_DAYS=7

# S3 / MinIO (Optional - for ML model storage)
# S3_ENDPOINT=http://localhost:9000
# S3_ACCESS_KEY=minioadmin
# S3_SECRET_KEY=minioadmin
# S3_BUCKET_MODELS=gogame-models

# AI Engine
GOGAME_PY_MODULE=gogame_py
AI_MOVE_TIMEOUT_SECONDS=30.0
AI_MOVE_RETRY_COUNT=1

# Evaluation Cache
EVAL_CACHE_MAX_SIZE=2000
EVAL_CACHE_TTL_SECONDS=3600.0

# CORS (Optional - comma separated)
# CORS_ORIGINS=http://localhost:3000,http://localhost:8080

